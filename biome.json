{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			"node_modules",
			"dist"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 24
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
